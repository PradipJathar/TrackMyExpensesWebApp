@model Expense


@{
    ViewData["Title"] = "Create New Expenses";
}

<form method="post" asp-action="Create">

    <div class="border p-5">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Record Your Expense</h2>
        </div>

        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseDate"></label>
                <input asp-for="ExpenseDate" class="form-control datetimepicker" type="date"/>
                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control">
                    <option selected>Select</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="w-12 btn-group" role="group">
            <input type="submit" class="btn btn-primary mx-1" value="Save" />
        </div>

    </div>

</form>